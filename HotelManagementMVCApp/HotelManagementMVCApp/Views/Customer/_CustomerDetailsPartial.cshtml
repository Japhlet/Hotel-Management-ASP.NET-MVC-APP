@model IEnumerable<HotelManagementMVCApp.ViewModel.CustomerDetailsVM>

<table class="table table-striped" style="width:100%">
    <thead class="bg-primary">
        <tr>
            <th>Action</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Phone Number</th>
            <th>Address</th>
            <th>Gender</th>            
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <span id="btnEdit" class="glyphicon glyphicon-pencil btn btn-info" onclick="EditCustomer(@item.customerId)">Edit</span>&nbsp;&nbsp;
                    <span id="btnDelete" class="glyphicon glyphicon-trash btn btn-danger" onclick="DeleteCustomer(@item.customerId)">Delete</span>
                </td>                
                <td>@item.firstName</td>
                <td>@item.lastName</td>
                <td>@item.phoneNumber</td>
                <td>@item.address</td>
                <td>@item.genderType</td>                
            </tr>
        }
    </tbody>
</table>