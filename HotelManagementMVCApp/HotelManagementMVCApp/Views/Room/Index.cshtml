@model HotelManagementMVCApp.ViewModel.RoomVM

@{
    ViewBag.Title = "Index";
}

<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script type="text/javascript">
    $(document).ready(function () {

    });

    function DisplayImage(result) {
        if (result.files && result.files[0]) {
            var fileReader = new FileReader();

            fileReader.onload = function (e) {
                $("#imageRoom").attr('src', e.target.result);
            }
            fileReader.readAsDataURL(result.files[0]);
        }
    }

</script>

<div style="margin-top:10px">
    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#divAddRoom" data-backdrop="static" data-keyboard="false" >Add Room</button>
</div>

<div id="divAddRoom" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Room</h4>
                <div class="modal-body">
                    <div class="container">
                        <div class="row">
                            <div class="form-group col-md-2">
                                @Html.LabelFor(m => m.roomNumber)
                                @Html.TextBoxFor(m => m.roomNumber, new { @class = "form-control" })
                            </div>

                            <div class="form-group col-md-2">
                                @Html.LabelFor(m => m.roomPrice)
                                @Html.TextBoxFor(m => m.roomPrice, new { @class = "form-control" })
                            </div>
                        </div>

                        <div class="row">
                            <div class="form-group col-md-2">
                                @Html.LabelFor(m => m.bookingStatusId)
                                @Html.DropDownListFor(m => m.roomPrice, Model.ListOfBookingStatus, new { @class = "form-control" })
                            </div>

                            <div class="form-group col-md-2">
                                @Html.LabelFor(m => m.roomTypeId)
                                @Html.DropDownListFor(m => m.roomPrice, Model.ListOfRoomType, new { @class = "form-control" })
                            </div>
                        </div>
                        
                        <div class="row">
                            <div class="form-group col-md-2">
                                @Html.LabelFor(m => m.roomCapacity)
                                @Html.TextBoxFor(m => m.roomCapacity, new { @class = "form-control" })
                            </div>

                            <div class="form-group col-md-2">
                                @Html.LabelFor(m => m.roomDescription)
                                @Html.TextBoxFor(m => m.roomDescription, new { @class = "form-control" })
                            </div>
                        </div>
                        
                        <div class="row">
                            <div class="form-group col-md-2">
                                @Html.LabelFor(m => m.roomImage)
                                <input type="file" class="form-control" name="roomImage" title="Load Image" onchange="DisplayImage(this)" />
                                <img id="imageRoom" height="100" width="100" style="border:solid" />
                            </div>
                        </div> 
                    </div>
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-success">Save</button> &nbsp;
                    <button type="button" data-dismiss="modal" class="btn btn-danger">Close</button>
                </div>
            </div>
        </div>
    </div>
</div>
